<div class="banner">
  <div class="container">
    <h1>Cocktails</h1>
    <p>The cause of and the solution to all of life's problems.</p>
  </div>
</div>

<div class="container">
  <div class="card-grid mt-3">

      <% @cocktails.each do |cocktail| %>
         <div class="card-category">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
         </div>
      <% end %>

  </div>
  <%= link_to "Add a new cocktail", new_cocktail_path, class: 'btn btn-pink' %>
</div>

