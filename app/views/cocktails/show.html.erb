<div>
  <h1><%= @cocktail.name %></h1>
</div>

<ul>
  <% @doses.each do |dose| %>
    <li>
      <%= dose.description %> - <%= dose.ingredient.name %> -
      <%= link_to dose_path( dose), method: :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>


<h3>
<%= link_to "Add ingredient to cocktail", new_cocktail_dose_path(@cocktail) %>

</h3>

<%= link_to "Back to all cocktails", root_path %>


